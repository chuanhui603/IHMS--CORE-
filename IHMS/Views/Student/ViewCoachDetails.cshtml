                SwalGreen.fire({
                    title: `已通知教練`,
                    showDenyButton: false,
                    showCancelButton: true,
                    confirmButtonText: '前往聯繫紀錄',
                    cancelButtonText: '繼續瀏覽',
                    icon: 'success'
                }).then((result) => {
                    if (result.isConfirmed) {
                        /*跳轉CandidateList*/
                        window.location.href = `${window.location.protocol}//${window.location.host}/Student/CandidateList`;
                    }
                })
            })
        })

       

