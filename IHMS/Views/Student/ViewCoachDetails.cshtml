            text-align: right;
            padding-top: 15px;
            padding-right: 30px;
        }

        .star {
            height: 18px;
        }

        .starOrig {
            filter: grayscale(1);
        }

        .divMore {
            text-align: center;
        }

        #btnMore {
            border: none;
            background-color: transparent;
            transition: .2s;
        }

            #btnMore:hover {
                color: #7fad39;
            }

        /*推薦教練*/
        .divRecContent {
            margin-top: 80px;
            margin-left: 40px;
        }

